@charset "utf-8";
body{
	background:url(../images/bo_top_bg.png) no-repeat center top,url(../images/bo_bottom_bg.png) no-repeat center bottom;
	}
.addblue{
	color:#0b88f2!important;
	}
/*头部*/
#discussions_header{
	height:1.97rem;
	background:url(../images/discus_header.jpg) no-repeat center;
	}
.d_middle_words{
	width:63%;
	margin:0 auto;
	padding-top:.36rem;
	}
.d_middle_words h2{
	font-size:.32rem;
	color:#ffffff;
	}
.d_middle_words h4{
	font-size:.18rem;
	font-weight:normal;
	color:#ffffff;
	}
.adv{
	height:.94rem;
	margin-top:.16rem;
	}	
/*border:1px solid red;*/
#reader_main .dis_main_list{
	box-shadow:none;
	}
.dis_keywords{
	border:.01rem solid #e1e1e1;
	border-top:0 solid;
	overflow:hidden;
	padding:.1rem;
	text-indent:.14rem;
	}
.dis_keywords li{
	float:left;
	font-size:.14rem;
	margin-right:.2rem;
	line-height:.24rem;
	color:#303030;
	}
.weibo_left .dis_p1{
	height:.67rem;
	line-height:.67rem;
	font-size:.18rem;
	color:#000000;
	padding-left:1.16rem;
	position:relative;
	background:url(../images/dis_group.png) no-repeat .26rem;
	}
.weibo_left .dis_p1 em{
	width:.24rem;
	height:.24rem;
	display:inline-block;
	position:absolute;
	top:.2rem;
	right:.2rem;
	background:url(../images/add_group.png) no-repeat center;
	cursor:pointer;
	}
.weibo_left .dis_p2{
	line-height:.28rem;
	font-size:.14rem;
	color:#717171;
	padding:.82rem .14rem .12rem;
	background:url(../images/no-group.png) no-repeat center .2rem;
	}	
.friends_group_left{
	/*border:1px solid red;*/
	}	
.friends_group_right h4 a{
	font-size:.14rem;
	color:#393939;
	font-weight:normal;
	}		
.friends_group_right>div{
	font-size:.12rem;
	color:#aaa;
	}	
.friends_group_right>div span{
	color:#6a6a6a;
	line-height:.32rem;
	}		
.friends_group_right input{
	font-size:.13rem;
	width:.7rem;
	height:.28rem;
	display:inline-block;
	background:#ffffff;
	border:.01rem solid #dcdcdc;
	cursor:pointer;
	}
	
.discu_groups p{
	font-size:.12rem;
	color:#323232;
	line-height:.24rem;
	}	
.discu_groups h3 a{
	color:#393939;
	}
.discu_groups input{
	font-size:.13rem;
	width:.7rem;
	height:.28rem;
	display:inline-block;
	background:#ffffff;
	border:.01rem solid #dcdcdc;
	margin-bottom:.05rem;
	cursor:pointer;
	}	
.discu_groups h3>span{
	display:inline-block;
	overflow:hidden;
	vertical-align: bottom;
	padding:0 .3rem .02rem;
	}
.discu_groups h3>span i{
	display:inline-block;
	padding:0 .17rem;
	height:.2rem;
	line-height:.2rem;
	font-size:.12rem;
	color:#5f5f5f;
	font-style:normal;
	border:.01rem solid #ccd4d6;
	border-radius:.03rem;
	position:relative;
	box-shadow:.01rem .01rem .05rem #CCC;
	}
.discu_groups h3>span img{
	position:absolute;
	top:.03rem;
	left:-.06rem;
	}
.discu_groups .groupmemtotal{
	line-height:.24rem;
	}	
.disc_right_main ul li{
	margin-bottom:.16rem;
	}
	
	
	
	