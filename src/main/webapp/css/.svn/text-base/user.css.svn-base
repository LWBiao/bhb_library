@charset "utf-8";
@import url("common.css");
body{
	background:url(../images/user_bg.jpg) no-repeat center top;
	}
#banner{
	width:100%;
	min-width:8rem;
	height:2.56rem;
	border-top:.03rem solid #dcc599;
	}
#banner img{
	width:100%;
	height:100%;
	}
/*主体*/
#usercenter{
	width:65%;
	min-width:8rem;
	margin:2% auto 0;
	overflow:hidden;
	}
#usercenter .u_c_left{
	width:32%;
	float:left;
	}
/*左*/
.u_c_left >div{
	width:100%;
	background:#ffffff;
	text-align:center;
	padding:6% 0;
	margin-bottom:5%;
	border:.01rem solid #dfdfdf;
	}
.u_c_left .l_part1 img{
	height:1.22rem;
	border-radius:.61rem;
	}
.u_c_left .l_part1 .user_info{
	width:80%;
	margin:0 auto;
	}
.user_info>ul{
	width:100%;
	font-size:.18rem;
	color:#606060;
	text-align:left;
	margin:5% 0;
	}
.user_info>ul li{
	padding:2% 0;
	}
.user_info>ul li span{
	width:28%;
	padding-right:3%;
	text-align:right;
	display:inline-block;

	}	
.user_info>ul li b{
	color:#858585;
	font-size:.16rem;
	font-weight:normal;
	}	
.user_btn button{
	width:60%;
	height:.40rem;
	font-size:.18rem;
	color:#fff;
	background:#05a2ed;
	border:0 solid;
	border-radius:.24rem;
	outline:none;
	cursor:pointer;
	}
/*part2*/
.u_c_left h3{
	width:80%;
	font-size:.18rem;
	color:#090909;
	font-weight:normal;
	text-align:left;
	margin:0 auto;
	padding:1% 0 1% 10%;
	background: url(../images/title_pic01.png) no-repeat left center;
	}
.l_part2 ul li{
	padding-left:8%;
	margin:5% 0;
	overflow:hidden;
	}
.l_part2 ul li .content{
	width:70%;
	float:left;
	text-align:left;
	color:#656565;
	font-size:.14rem;
	}
.l_part2 ul li .content a{
	display:block;
	padding-top:3%;
	}
.l_part2 ul li .time{
	font-size:.12rem;
	color:#b1b1b1;
	width:30%;
	float:left;
	background:url(../images/clock.png) no-repeat left center;
	}
/*part3*/
.l_part3 h3{
	padding:1% 0 1% 15%;
	background: url(../images/title_pic02.png) no-repeat left center;
	}
.l_part3 ul li{
	overflow:hidden;
	margin-top:6%;
	}
.l_part3 ul li .booklook{
	width:25%;
	float:left;
	}	
.l_part3 ul li .bookinfo{
	width:70%;
	float:left;
	}	
.l_part3 ul li .bookinfo .description{
	text-align:left;
	line-height:.26rem;
	font-size:.14rem;
	color:#8c8c8c;
	}
.data{
	width:100%;
	overflow:hidden;
	margin-top:3%;
	}	
.data>div{
	float:left;
	background-image:url(../images/icon.png);
	background-repeat: no-repeat;
	background-position:left top;
	padding-left:.2rem;
	cursor:pointer;
	}
.data>div.recommendNum{
	margin-left:6%;
	background-position:left -.28rem;
	}
.data>div.talkNum{
	float:right;
	background-position:left -.54rem;
	}
/*part4*/
.l_part4 h3{
	padding:1% 0 1% 15%;
	background: url(../images/title_pic03.png) no-repeat left center;
	}
.usertalk{
	width:100%;
	margin-top:2%;
	}
.talkdetail{
	width:90%;
	margin:0 auto;
	text-align:left;
	font-size:.14rem;
	line-height:.26rem;
	color:#656565;
	}
.usertalk >.data{
	width:90%;
	margin:3% auto;
	}
.usertalk >.data>div.talkNum{
	margin-right:0;
	}
/*右*/	
#usercenter .u_c_right{
	width:65%;
	float:right;
	background:#ffffff;
	border:.01rem solid #dfdfdf;
	}	
.user_container{
	width:90%;
	margin:5% auto 0.7%;
	}
.user_container .container_title{
	font-size:.18rem;
	font-weight:normal;
	color:#05a2ed;
	text-align:center;
	border-bottom:.01rem solid #f0f0f0;
	}
.container_title img{
	width:12%;
	vertical-align:middle;
	margin-right:.4rem;
	}
.u_c_content{
	overflow:hidden;
	padding:6% 0% 3% 0%;
	}
figure{
	overflow:hidden;
	margin-bottom:6%;
	}
figcaption{
	width:36%;
	float:left;
	}
.u_c_content h5{
	font-size:.14rem;
	height:.27rem;
	padding-left:.08rem;
	color:#FFF;
	background:url(../images/tit_bg.png) no-repeat left;
	}
.u_c_content h4{
	font-size:.18rem;
	color:#333333;
	margin-bottom:6%;
	}
.u_c_content p{
	padding-left:2%;
	font-size:.14rem;
	line-height:0.28rem;
	color:#b7b7b7;
	}
.cover{
	width:60%;
	float:right;
	padding:1% 0;
	text-align:right;
	}
.cover img{
	width:89%;
	height:2.46rem;
	padding:3%;
	margin-right:2%;
	border-radius:.1rem;
    box-shadow:.02rem .02rem .1rem #666;
	}
/*主体结束*/
