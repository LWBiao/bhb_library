@charset "utf-8";
.mychoose {
	width:6.6rem;
	overflow:hidden;
	position: relative;
	margin-bottom:.2rem;
}
.mychoose p {
	line-height: .12rem;
	line-height: 0;
	height: 0;
	margin: .16rem;
	color: #bbb;
}
.action {
	width: 4rem;
	height: .3rem;
	margin: .10rem 0;
}
.cropped {
	position: absolute;
	right: 0;
	top: 0;
	width:2rem;
	height:4.5rem;
	padding: .04rem;
	color:#9d9d9d;
	box-shadow: 0 0 .12rem #ddd;
	text-align: center;
	border: .01rem #ddd solid;
	vertical-align:bottom;
}
.cropped span{
	display:block;
	}
.imageBox {
	position: relative;
	height:4.5rem;
	width:4.5rem;
	border: .01rem solid #aaa;
	background: #fff;
	overflow: hidden;
	background-repeat: no-repeat;
	cursor: move;
	box-shadow: .04rem .04rem .12rem #B0B0B0; 	
}
.imageBox .clipBox {
	position: absolute;
	top: 50%;
	left: 50%;
	width: 1.87rem;
	height: 1.84rem;
	margin-top: -1rem;
	margin-left: -1rem;
	border-radius:1rem;
	box-sizing: border-box;
	background:url(../images/clip.png) no-repeat center;
	z-index:100;
}
.imageBox .thumbBox {
	border-radius:100px;
	width:96%;
	height:96%;
	margin:0 auto;
	vertical-align:middle;
	text-align:center;
	margin-top:.04rem;
	box-sizing: border-box;
	border: .01rem solid rgb(102, 102, 102);
	box-shadow: 0 0 0 1000px rgba(0, 0, 0, 0.5);
	background: none repeat scroll 0% 0% transparent;
}
.imageBox .spinner {
	position: absolute;
	top: 0;
	left: 0;
	bottom: 0;
	right: 0;
	text-align: center;
	line-height: 400px;
	background: rgba(0,0,0,0.7);
}
.Btnsty_peyton{ 
  float: right;
  width: .66rem;
  display: inline-block;
  margin-bottom: .1rem;
  height: .44rem;
  line-height: .44rem;
  font-size: .2rem;
  color: #343434;
  margin:0 .02rem;
  background-color: #f6f6f6;
  border-radius: .03rem;
  text-decoration: none;
  cursor: pointer;
  box-shadow: 0 0 .05rem #B0B0B0;
  border: 0 #fff solid;  
  }
/*选择文件上传*/
.new-contentarea {
	width: 1.65rem;
	overflow:hidden;
	margin: 0 auto;
	position:relative;
	float:left;
}
.new-contentarea label {
	width:100%;
	height:100%;
	display:block;
}
.new-contentarea input[type=file] {
	width:1.88rem;
	height:.6rem;
	background:#333;
	margin: 0 auto;
	position:absolute;
	right:50%;
	margin-right:-.94rem;
	top:0;
	right/*\**/:0\9;
	margin-right/*\**/:0\9;
	width/*\**/:.1rem\9;
	opacity:0;
	filter:alpha(opacity=0);
	z-index:2;	
}
a.upload-img{
	width:1.65rem;
	display: inline-block;
	margin-bottom: .1rem;
	height:.44rem;
	line-height: .44rem;
	font-size: .2rem;
	color:#343434;
	background-color: #f6f6f6;
	border-radius: .03rem;
	text-decoration:none;
	cursor:pointer;
	border: 0 #fff solid;
	box-shadow: 0 0 .05rem #B0B0B0;
}
a.upload-img:hover{
	background-color: #ec7e70;
}

.tc{text-align:center;}
